<!-- res/layout/toolbar.xml -->
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomToolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/rowblue"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="8dp">

        <ImageButton
            android:id="@+id/left_menu_button"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="burger_menu_left"
            android:src="@drawable/ic_menu_left"
            android:scaleType="fitCenter" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/toolbar_title"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#FFFFFFFF"
            android:contentDescription="center_button"
            android:scaleType="fitCenter"
            android:src="@drawable/mire_small_white_logo" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/right_menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="burger_menu_right"
            android:src="@drawable/ic_menu_right"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>
